<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/minusButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="72dp"
        android:onClick="minus"
        android:text="-"
        app:layout_constraintStart_toStartOf="@+id/editSecondNumber"
        app:layout_constraintTop_toBottomOf="@+id/editSecondNumber" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="80dp"
        android:layout_height="80sp"
        android:layout_marginTop="72dp"
        android:onClick="plus"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/editSecondNumber"
        app:layout_constraintTop_toBottomOf="@+id/editSecondNumber" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="80dp"
        android:layout_height="80sp"
        android:layout_marginTop="40dp"
        android:onClick="divide"
        android:text="/"
        app:layout_constraintStart_toStartOf="@+id/editSecondNumber"
        app:layout_constraintTop_toBottomOf="@+id/minusButton" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="80dp"
        android:layout_height="80sp"
        android:layout_marginTop="40dp"
        android:onClick="multiply"
        android:text="X"
        app:layout_constraintEnd_toEndOf="@+id/editSecondNumber"
        app:layout_constraintTop_toBottomOf="@+id/plusButton" />

    <TextView
        android:id="@+id/textSeeResult"
        android:layout_width="100dp"
        android:layout_height="20sp"
        android:layout_marginTop="320dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSecondNumber" />

    <EditText
        android:id="@+id/editFirstNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Edit first number"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSecondNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Edit second number"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFirstNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>